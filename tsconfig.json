{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, // âœ… Avoid breaking on missing types
    "resolveJsonModule": true,
    "types": [
      "sanity"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "sanity.config.ts",
    "sanity.cli.ts",
    "schemas"
  ],
  "exclude": [
    "node_modules"
  ]
}
